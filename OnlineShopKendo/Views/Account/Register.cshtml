@model OnlineShopKendo.Models.RegisterModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>





<div class="container preview-login">
    <h2>@Resources.Resource.Registration</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <h4>@Resources.Resource.RegistrationUser</h4>
            <hr />
            @Html.ValidationSummary(false)

            <div class="row">
                <div class="col-lg-4">
                    <label>@Resources.RegisterModel.Login</label><br />
                </div>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.Login)
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-4">
                    <label>@Resources.RegisterModel.Email</label><br />
                </div>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.Email)
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <label>@Resources.RegisterModel.Password</label><br />
                </div>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.Password)
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <label>@Resources.RegisterModel.ConfirmPassword</label><br />
                </div>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.PasswordConfirm)
                </div>
            </div>
            </div>

            <div>
                <div>
                    <input class="k-button" type="submit" value=@Resources.Resource.Registered />
                </div>
            </div>
    }
</div>



