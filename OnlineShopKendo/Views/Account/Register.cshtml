@model OnlineShopKendo.Models.RegisterModel

<div class="container">
    <h2>@Resources.Resource.Registration</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <h4>@Resources.Resource.RegistrationUser</h4>
            <hr />
            @Html.ValidationSummary(false)

            <div>
                @Resources.Resource.Login
                <div>
                    @Html.EditorFor(model => model.Login)
                </div>
            </div>

            <div>
                @Resources.Resource.Password
                <div>
                    @Html.EditorFor(model => model.Password)
                </div>
            </div>

            <div>
                @Resources.Resource.ConfirmPassword
                <div>
                    @Html.EditorFor(model => model.PasswordConfirm)
                </div>
            </div>

            <div>
                <div>
                    <input type="submit" value=@Resources.Resource.Registered />
                </div>
            </div>
        </div>
    }
</div>



