@model OnlineShopKendo.Models.RegisterModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="container">
    <h2>@Resources.Resource.Registration</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <h4>@Resources.Resource.RegistrationUser</h4>
            <hr />
            @Html.ValidationSummary(false)

            <div>
                @Resources.RegisterModel.Login
                <div>
                    @Html.EditorFor(model => model.Login)
                </div>
            </div>
            
            <div>
                @Resources.RegisterModel.Email
                <div>
                    @Html.EditorFor(model => model.Email)
                </div>
            </div>

            <div>
                @Resources.RegisterModel.Password
                <div>
                    @Html.EditorFor(model => model.Password)
                </div>
            </div>

            <div>
                @Resources.RegisterModel.ConfirmPassword
                <div>
                    @Html.EditorFor(model => model.PasswordConfirm)
                </div>
            </div>

            <div>
                <div>
                    <input class="k-button" type="submit" value=@Resources.Resource.Registered />
                </div>
            </div>
        </div>
    }
</div>



