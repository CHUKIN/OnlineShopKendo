@model OnlineShopKendo.Models.LoginModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<style>
    .preview {
        background-color: darkgrey;
        border-radius: 10px;
        width: 50%;
        margin-top: 2rem;
        width: 30%;
    }
</style>

<div class="container preview">
    <h2>@Resources.Resource.Authorization</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            @Html.ValidationSummary()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
            <div class="row">
                <div class="col-lg-4">
                    <label>@Resources.LoginModel.Login</label><br/>
                </div>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.Login)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <label>@Resources.LoginModel.Password</label><br/>
                </div>
                <div class="col-lg-8">
                    @Html.EditorFor(x => x.Password)
                </div>
            </div>
            <p><button class="k-button" type="submit">@Resources.Resource.Authorization</button>
            </p>
        </div>
    }
</div>



