@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Resources.Resource.ChooseLanguage</a>
                <div class="dropdown-menu" >
                    <a class="dropdown-item" href="/Home/ChangeCulture/?lang=ru">Русский</a>
                    <a class="dropdown-item" href="/Home/ChangeCulture/?lang=en">English</a>
                </div>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" href="/Home/PersonalArea">@Resources.Resource.Hello @User.Identity.GetUserName()</a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" href="/Account/LogOut">@Resources.Resource.LogOut</a>
            </li>

        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Resources.Resource.ChooseLanguage</a>
            <div class="dropdown-menu" >
                <a class="dropdown-item" href="/Home/ChangeCulture/?lang=ru">Русский</a>
                <a class="dropdown-item" href="/Home/ChangeCulture/?lang=en">English</a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Account/Register">@Resources.Resource.Registration</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Account/Login">@Resources.Resource.Authorization</a>
        </li>
    </ul>
}


